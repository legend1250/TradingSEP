@model IEnumerable<TradingVLU.Models.user>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section jsFooter{
    <script src="/Asset/Admin/js/userController/User.js"></script>
}

<h2>Manage Account</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Item List
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>username</th>
                            <th>password</th>
                            <th>name</th>
                            <th>email</th>
                            <th>is_active</th>
                            <th>last_login_date</th>
                            <th>last_logout_date</th>
                            <th>ip_last_login</th>
                            <th>ip_last_logout</th>
                            <th>create_by</th>
                            <th>create_date</th>
                            <th>update_by</th>
                            <th>update_date</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.username)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.password)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.last_login_date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.last_logout_date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ip_last_login)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ip_last_logout)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.create_by)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.create_date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.update_by)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.update_date)
                            </td>
                            <td>
                                <a href="#" class="btn-active" data-id="@item.id">@(item.is_active != 1 ? "Deactive" : "Active")</a>
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "Delete", new { id = item.id })
                            </td>

                        </tr>
                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


