                        @Html.DisplayFor(modelItem => item.update_by)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.update_date)
                    </td>
                    <td>
                        <img src="~/Content/img/@item.index_image" style="width: 150px" />
                        @*@Html.DisplayFor(modelItem => item.index_image)*@
                    </td>
                    <td>
                        <img src="~/Content/img/@item.detail_image1" style="width: 150px" />
                        @*@Html.DisplayFor(modelItem => item.detail_image1)*@
                    </td>
                    <td>
                        <img src="~/Content/img/@item.detail_image2" style="width: 150px" />
                        @*@Html.DisplayFor(modelItem => item.detail_image2)*@
                    </td>
                    <td>
                        <img src="~/Content/img/@item.detail_image3" style="width: 150px" />
                        @*@Html.DisplayFor(modelItem => item.detail_image3)*@
                    </td>
                    <td>
                        <img src="~/Content/img/@item.detail_image4" style="width: 150px" />
                        @*@Html.DisplayFor(modelItem => item.detail_image4)*@
                    </td>
                    <td>
                        <img src="~/Content/img/@item.detail_image5" style="width: 150px" />
                        @*@Html.DisplayFor(modelItem => item.detail_image5)*@
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.price)
                    </td>
                </tr>
            }
        }


    </table>
